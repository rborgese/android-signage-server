{
    "uuid": "{{ view.uuid }}",
    "name": "{{ view.name }}",
    "alerts": false,
    "assets": [
        {% for asset in view.assets %}
        {
            "name": "{{ asset.name }}",
            "url": "{{ asset.url }}",
            "kind": "{{ asset.kind }}",
            "duration": "{{ asset.duration }}",
            "active": {{ 'true' if asset.active else 'false' }}
        }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ]
}