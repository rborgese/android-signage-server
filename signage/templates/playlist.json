{
    "uuid": "{{ uuid }}",
    "name": "{{ playlist.name }}",
    "alerts": {{ alert|yesno:"true,false" }},
    "assets": [
        {% for asset in assets %}
        {
            "name": "{{ asset.name }}",
            "url": "{{ asset.url }}",
            "kind": "{{ asset.kind }}",
            "duration": "{{ asset.duration }}",
            "active": {{ asset.active|yesno:"true,false" }}
        }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ]
}